    <h1>Gratulerer, du klarte det!</h1>
    <h2>Registrer deg og v√¶r med i trekningen av noe awesome</h2>
    <form action="/highscore/create" method="POST">
        <p id="showTimeUsed">
            
        </p>
        <input type="hidden" name="timeused" id="timeused">
        <label for="name">Name</label><br/>
        <input id="name" name="name">
        <br/>
        <label for="phone">Mobil</label><br/>
        <input id="phone" name="mobile">
        <br/>
        <label for="email">Epost</label><br/>
        <input id="email" name="email">
        <br/>
        <button id="submitAnswer">Send inn</button>
        <input type='hidden' name='_csrf' value='<%= _csrf %>'>
    </form>
</div>